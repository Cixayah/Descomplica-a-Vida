{
  "manifest_version": 3,
  "name": "Descomplica a Vida",
  "version": "0.6",
  "description": "Extensão somente usada para fins educativos. Não utilize para colar",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "cookies",
    "tabs",
    "localstorage"
  ],
  "host_permissions": [
    "https://*.descomplica.com.br/*",
    "https://*.pegasus-pepe-legal.prd.us.descomplica.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
